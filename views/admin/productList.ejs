                <div class="card-body">
                    <div class="table-responsive">
                      <table id="myTable" class="table table-hover text-center">
                        <thead>
                          <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Quantity/Stock</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (product && product.length > 0) { for (let i = 0; i <
                          product.length; i++) { %>
                          <tr>
                            <td width="25%">
                              
                                <div class="left">
                                    <img src="/images/<%= product[i].image[0] %>" class="img-sm img-thumbnail" alt="Item" />
                                </div>
                                <div class="info pl-3">
                                  <h6 class="mb-0 title">
                                    <%= product[i].name %>
                                  </h6>
                                </div>
                        
                            </td>
                            <td>
                              <span
                                >â‚¹<%= product[i].price %></span>
                            </td>
                            <td>
                              <span
                                ><%= product[i].category.name %></span>
                            </td>
                            <td>
                              <span
                                ><%= product[i].description %></span>
                            </td>
                            
                            <td>
                              <span class="badge rounded-pill alert-success"
                                ><%= product[i].quantity %></span></td>
                            <td>
                              <a
                                href="/admin/productEditPage?id=<%= product[i]._id %>"
                                class="btn btn-sm btn-danger rounded font-sm mt-15"
                                >Edit</a
                              >
                              <%if(product[i].list === true){%>
                                <a
                                href="/admin/listProduct?id=<%= product[i]._id %>"
                                class="btn btn-sm btn-danger rounded font-sm mt-15"
                                >Unlist</a
                              >
                              <%}else{%>
                                <a
                                href="/admin/listProduct?id=<%= product[i]._id %>"
                                class="btn btn-sm btn-success text-white rounded font-sm mt-15"
                                >List</a
                              >
                               
                                <%}%></td>
                           
                           
                          </tr>
                          <% } } else { %>
                          <tr>
                            <td colspan="5">Products Not Found</td>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
           
                
            </section>
